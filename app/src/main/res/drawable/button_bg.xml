<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="0"
                android:endColor="@color/spring_green"
                android:startColor="@color/green_yellow"
                android:type="linear" />
            <corners android:radius="15dp" />
        </shape>
    </item>

    <item
        android:bottom="3dp"
        android:left="3dp"
        android:right="3dp"
        android:top="3dp">
        <shape android:shape="rectangle">
            <solid android:color="#CDE6E6FA" />
            <corners android:radius="15dp" />
        </shape>
    </item>


</layer-list>